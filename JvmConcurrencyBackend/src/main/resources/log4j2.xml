<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.apache.logging.log4j.core,io.sentry.log4j2">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <JsonLayout complete="false" compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}" />
                <KeyValuePair key="kubeService" value="content-presentation" />
                <KeyValuePair key="activityId" value="$${ctx:activityId:-none}" />
                <KeyValuePair key="url" value="$${ctx:url:-none}" />
                <KeyValuePair key="osThread" value="$${ctx:osThread:-none}" />
                <KeyValuePair key="virtualThread" value="$${ctx:virtualThread:-none}" />
                <KeyValuePair key="coroutine" value="$${ctx:coroutine:-none}" />
            </JsonLayout>
        </Console>
        <File name="File" fileName="logs/app-${date:yyyy-MM-dd-HH-mm-ss}.log">
            <JsonLayout complete="false" compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}" />
                <KeyValuePair key="kubeService" value="content-presentation" />
                <KeyValuePair key="activityId" value="$${ctx:activityId:-none}" />
                <KeyValuePair key="url" value="$${ctx:url:-none}" />
                <KeyValuePair key="osThread" value="$${ctx:osThread:-none}" />
                <KeyValuePair key="virtualThread" value="$${ctx:virtualThread:-none}" />
                <KeyValuePair key="coroutine" value="$${ctx:coroutine:-none}" />
            </JsonLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.scottrogener.concurrency.util.ThreadLogger" level="INFO">
            <AppenderRef ref="File" />
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
